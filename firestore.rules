rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Helper function to check if user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }

    // Helper function to check if user belongs to a household
    function userHouseholdId() {
      return get(/databases/$(database)/documents/users/$(request.auth.uid)).data.household_id;
    }

    // Users collection
    match /users/{userId} {
      // Users can read their own document
      allow read: if isAuthenticated() && request.auth.uid == userId;

      // Users can read other users in the same household
      // This is needed for household members list and participant picker
      allow read: if isAuthenticated() &&
                     userHouseholdId() != null &&
                     resource.data.household_id != null &&
                     resource.data.household_id == userHouseholdId();

      // Users can create their own document during signup
      allow create: if isAuthenticated() && request.auth.uid == userId;

      // Users can update their own document
      allow update: if isAuthenticated() && request.auth.uid == userId;

      // No one can delete user documents
      allow delete: if false;
    }

    // Households collection
    match /households/{householdId} {
      // Allow authenticated users to read households
      // This is needed for invite code lookups when joining
      allow read: if isAuthenticated();

      // Only authenticated users can create households
      allow create: if isAuthenticated();

      // Members of the household can update it
      allow update: if isAuthenticated() &&
                       userHouseholdId() == householdId;

      // Only allow deletion if user is in the household (for now)
      allow delete: if isAuthenticated() &&
                       userHouseholdId() == householdId;

      // Expenses subcollection: allow household members to read and create expenses
      match /expenses/{expenseId} {
        allow read: if isAuthenticated() && userHouseholdId() == householdId;

        // Conservative create rules: creator must be the auth user and payer must be auth user
        allow create: if isAuthenticated()
                       && userHouseholdId() == householdId
                       && request.resource.data.createdBy == request.auth.uid
                       && request.resource.data.payerId == request.auth.uid
                       && request.resource.data.totalCents is number
                       && request.resource.data.participants is list
                       && request.resource.data.entries is list;

        // Allow updates only by the original creator (prevents arbitrary edits)
        allow update: if isAuthenticated()
                       && userHouseholdId() == householdId
                       && resource.data.createdBy == request.auth.uid
                       && request.resource.data.createdBy == resource.data.createdBy;

        // Allow deletion only by the creator
        allow delete: if isAuthenticated()
                       && userHouseholdId() == householdId
                       && resource.data.createdBy == request.auth.uid;
      }

      // Payments subcollection: allow household members to create/read payments
      match /payments/{paymentId} {
        allow read: if isAuthenticated() && userHouseholdId() == householdId;

        allow create: if isAuthenticated()
                       && userHouseholdId() == householdId
                       && request.resource.data.fromUser == request.auth.uid
                       && request.resource.data.totalCents is number;

        // Allow update/delete only by the creator (fromUser)
        allow update, delete: if isAuthenticated()
                               && userHouseholdId() == householdId
                               && resource.data.fromUser == request.auth.uid;
      }
    }

    // Items collection
    match /items/{itemId} {
      // Users can read items from their household
      allow read: if isAuthenticated() &&
                     resource.data.householdId == userHouseholdId();

      // Users can create items for their household
      allow create: if isAuthenticated() &&
                       request.resource.data.householdId == userHouseholdId() &&
                       request.resource.data.ownerId == request.auth.uid;

      // Users can update items in their household
      // Can update own items or communal items
      allow update: if isAuthenticated() &&
                       resource.data.householdId == userHouseholdId() &&
                       (resource.data.ownerId == request.auth.uid ||
                        resource.data.isCommunal == true);

      // Users can delete their own items or communal items in their household
      allow delete: if isAuthenticated() &&
                       resource.data.householdId == userHouseholdId() &&
                       (resource.data.ownerId == request.auth.uid ||
                        resource.data.isCommunal == true);
    }

    // Reminders collection (future use)
    match /reminders/{reminderId} {
      // Only allow server-side operations (Cloud Functions)
      allow read, write: if false;
    }
  }
}
